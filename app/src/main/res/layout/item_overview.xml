<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_margin="4dp">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:id="@+id/med_title_item"
       tool:text ="Chloramphenicol"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/med_title_item"
        android:layout_marginTop="4dp"
        tool:text="For Conjuctivitis "
        android:id="@+id/med_details_item"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        tool:text="Friday, 25th June 2018"
        android:layout_gravity="center"
        android:id="@+id/med_time_item"/>


</RelativeLayout>